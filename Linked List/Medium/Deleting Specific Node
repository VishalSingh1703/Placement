/**
 * Definition for singly-linked list.
 * struct ListNode {
 *     int val;
 *     ListNode *next;
 *     ListNode(int x) : val(x), next(NULL) {}
 * };
 */
class Solution {
public:
    void deleteNode(ListNode* node) 
    {
        // ListNode* nxt = node->next;
        // *node = *nxt;
        // delete(nxt);

        *node = *node->next;
    }
};
